<Window x:Class="ToolkitM9.UnlockBootloader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unlock Bootloader via HTC Dev" Height="170.5" Width="514" WindowStartupLocation="CenterScreen" Icon="Resources/SK.ico" Loaded="Window_Loaded" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="btnUnlockCode" Content="2. Get Unlock Token" HorizontalAlignment="Left" Margin="267,43,0,0" VerticalAlignment="Top" Width="223" Height="27" Click="btnUnlockCode_Click"/>
        <Button x:Name="btnHDevSignUp" Content="1. Signup for HTC Developer Account" Margin="267,13,0,0" VerticalAlignment="Top" Width="223" Height="25" HorizontalAlignment="Left" Click="btnHDevSignUp_Click"/>
        <GroupBox Header="Status" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Height="89" Width="221">
            <TextBlock x:Name="tBUnlockStatus" HorizontalAlignment="Left" Margin="4,4,-2,0" TextWrapping="Wrap" Text="Idle..." VerticalAlignment="Top" Width="207" Height="62"/>
        </GroupBox>
        <Button x:Name="btnUnlock" Content="3. Unlock (Wipes Data!)" HorizontalAlignment="Left" Margin="267,75,0,0" VerticalAlignment="Top" Width="223" Height="27" Click="btnUnlock_Click"/>
        <TextBlock x:Name="tbToken" HorizontalAlignment="Left" Margin="10,107,0,0" TextWrapping="Wrap" Text="Token not selected..." VerticalAlignment="Top" Height="22" Width="480"/>
    </Grid>
</Window>
